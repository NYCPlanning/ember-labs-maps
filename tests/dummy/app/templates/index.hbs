  {{#demo.example name='map.hbs'}}
    {{#labs-map
      id='main-map'
      initOptions=(hash 
        center=(array -73.92 40.7)
        zoom=10
        bearing=0.5
        style=model.meta.mapboxStyle
      ) as |map|}}
      {{#map.labs-layers
        layerGroups=model.layerGroups as |layers|}}
